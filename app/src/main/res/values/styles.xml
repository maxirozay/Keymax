<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="KeyboardDark">
        <item name="android:background">@color/background_dark</item>
        <item name="android:keyBackground">@drawable/key_dark</item>
        <item name="android:keyPreviewLayout">@layout/preview_key</item>
        <item name="android:popupLayout">@layout/popup_layout</item>
    </style>

    <style name="KeymaxDialog">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:buttonBarButtonStyle">@style/DialogButton</item>
    </style>

    <style name="DialogButton">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
</resources>
